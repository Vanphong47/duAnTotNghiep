extends ../../layouts/default.pug 

block main 

  div(class='mt-[30px] ml-[8%]')
    div(class='flex text-[#5C3F2C] items-center text-[12px] font-[600]') 
      <i class="fa-solid fa-house-user mr-[8px]"></i>
      a(href='/') TRANG CHỦ /
      span(class='uppercase ml-[3px]') Đăng kí tài khoản :
  span(class=' mt-[12px] ml-[8%] flex text-[#5C3F2C] items-center text-[12px] font-[600]') 
    | Nếu bạn chưa có tài khoản, hãy đăng kí tại đây.
  h1(class='text-[36px] w-full text-center mt-[20px]') #{pageTitle}
  form(
    action="/user/register"
    method='POST'
    class='mt-[12px] ml-[30%]'
  )
    div(class='mb-[12px]')
      lable(
        for="fullName"
        class='font-[500]'
      ) Họ và tên 
        span(class='text-[#FF0000]') *
      br
      input(
        type="text"
        id="fullName"
        name="fullName"
        placeholder="Nhập thông tin..."
        required
        class='border-[2px] w-[600px] h-[40px] mt-[12px] outline-none px-[15px]'
      )
    div(class='mb-[12px]')
      lable(
        for="phone"
        class='font-[500]'
      ) Số điện thoại 
        span(class='text-[#FF0000]') *
      br
      input(
        type="phone"
        id="phone"
        name="phone"
        placeholder="Nhập sđt..."
        required
        class='border-[2px] w-[600px] h-[40px] mt-[12px] outline-none px-[15px]'
      )
    div(class='mb-[12px]')
      lable(for="email" class='font-[500]') Email 
        span(class='text-[#FF0000]') *
      br
      input(
        type="email"
        id="email"
        name="email"
        placeholder="Nhập email..."
        class='border-[2px] w-[600px] h-[40px] bg-[#ECF0FD] mt-[12px] outline-none px-[15px]'
        required
      )
    div(class='mb-[12px]')
      lable(for="password" class='font-[500]') Mật khẩu 
        span(class='text-[#FF0000]') *
      br
      input(
        type="password"
        id="password"
        name="password"
        placeholder="Nhập mật khẩu..."
        class='border-[2px] w-[600px] h-[40px] bg-[#ECF0FD] mt-[12px] outline-none px-[15px]'
        required
      )
    div 
      button(
        type='submit'
        class='w-[180px] h-[45px] bg-[#35C0C5] hover:cursor-pointer'
      ) Đăng ký