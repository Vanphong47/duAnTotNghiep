    li.flex.items-center.opacity-70(class='pt-[25px] ml-[8px]')
      i.fas.fa-tachometer-alt(class='mr-[8px]')
      a(href=`/${prefixAdmin}/dashboard` class="text-[12px]") Trang tổng quan
    li.flex.items-center.opacity-70(class='pt-[25px] ml-[8px]')
