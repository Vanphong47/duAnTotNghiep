mixin select-tree(items, lever = 1, parentId)
  each item in items 
    - const prefix = Array(lever+1).join("-- ")
    option(
      value=item.id 
      selected=(item.id == parentId ? true : false)
    ) #{prefix}#{item.title} 
    if(item.children)
      +select-tree(item.children, lever+1, parentId) 



